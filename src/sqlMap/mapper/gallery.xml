<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="GalleryMapper">
  <!-- 쿼리 보관 -->
  <sql id="criteria">
  	<trim prefix="(" suffix=") AND" prefixOverrides="OR">
		<foreach collection="typeArr" item="type">
			<trim prefix="OR">
				<choose>
					<when test="type == 'T'.toString()">
						gtitle LIKE concat_ws(#{ keyword }, '%', '%') <!-- '%' || #{ keyword } || '%' -->
					</when>
					<when test="type == 'F'.toString()">
						gfilename LIKE concat_ws(#{ keyword }, '%', '%') <!-- '%' || #{ keyword } || '%' -->
					</when>
					<when test="type == 'E'.toString()">
						email LIKE concat_ws(#{ keyword }, '%', '%') <!-- '%' || #{ keyword } || '%' -->
					</when>
				</choose>
			</trim>
		</foreach>
	</trim>
  </sql>
  
  <select id="selectGalleryAllPaging" resultType="jdbc.GalleryDTO">
  	<![CDATA[
	  	SELECT	gno, gtitle, gupfolder, guuid, gfilename, email, gdate
	  	FROM gallery
	  	WHERE]]>
	  		<include refid="criteria"/>
	<![CDATA[
			2 > 1
		ORDER BY gno DESC
	  	LIMIT #{ amount } OFFSET #{ offset }
	]]>
  	<!-- <![CDATA[
  		SELECT	gno, gtitle, gupfolder, guuid, gfilename, email, gdate
  		FROM 	(	SELECT	(@R := @R+1) rn, gno, gtitle, gupfolder, guuid, gfilename, email, gdate
  					FROM 	gallery, (SELECT @R := 0) s2
  					WHERE ]]>
  						보관 쿼리 사용
  						<include refid="criteria"/> 
  	<![CDATA[			@R < #{ amount } * #{ pageNum }
  					ORDER BY gno DESC) g
  		WHERE 	rn >= #{ amount } * ( #{ pageNum } - 1 )
  	]]> -->
  </select>
  
  <select id="totalCount" resultType="int">
  	<![CDATA[
  		SELECT COUNT(*) FROM gallery WHERE ]]> 
  			<include refid="criteria"/> 
  	<![CDATA[ gno > 0 ]]>
  </select>
  
  <select id="selectBoardAll" resultType="jdbc.GalleryDTO">
  	<![CDATA[
  		SELECT gno, gtitle, gupfolder, guuid, gfilename, email, gdate
  		FROM gallery WHERE gno > 0 
  		ORDER BY gno DESC
  	]]>
  </select>
  
  <select id="selectBoard" resultType="jdbc.GalleryDTO">
  	SELECT gno, gtitle, gupfolder, guuid, gfilename, email, gdate
  	FROM gallery WHERE gno = #{gno}
  </select>
  
  <insert id="insertBoard">
  	INSERT INTO gallery(gtitle, gupfolder, guuid, gfilename, email) 
  	VALUES(#{title}, #{upfolder}, #{uuid}, #{filename}, #{email})
  </insert>
  
  <delete id="deleteBoard">
  	DELETE FROM gallery WHERE gno = #{gno}
  </delete>
  
  <update id="updateBoard">
  	UPDATE gallery
  	SET gtitle=#{title}, gupfolder=#{upfolder}, guuid=#{uuid}, gfilename=#{filename}, email=#{email} WHERE gno = #{gno}
  </update>
</mapper>